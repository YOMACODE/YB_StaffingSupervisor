
@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Views/Shared/_ProantoV2MasterLayout.cshtml";
}
@using YB_StaffingSupervisor.DataAccess.Entities



<style type="text/css">
    html {
        scroll-behavior: smooth;
        transition: scroll-behavior 2s;
    }

    .sidebar-nav ul .sidebar-item.selected > .sidebar-link {
        color: #000000;
        background: #d6e1ef;
        margin-top: 2px;
        border-bottom: 2px solid #ef7d18;
    }

    .dd3-handle:before {
        content: "\f070";
        font-family: 'Font Awesome 5 Free';
    }

    #myBtn {
        display: none;
        position: fixed;
        bottom: 20px;
        right: 30px;
        z-index: 99;
        color: #ffc65c;
        font-size: 36px;
        opacity: 0.7;
    }

        #myBtn:hover {
            color: #f9b22e;
            cursor: pointer;
            opacity: 1;
        }

    div.tooltip {
        position: absolute;
        text-align: center;
        padding: 0.5em;
        font-size: 10px;
        color: #222;
        background: #FFF;
        border-radius: 2px;
        pointer-events: none;
        box-shadow: 0px 0px 2px 0px #a6a6a6;
    }

    .key path {
        display: none;
    }

    .key line {
        stroke: #000;
        shape-rendering: crispEdges;
    }

    .key text {
        font-size: 10px;
    }

    .key rect {
        stroke-width: .4;
    }

    th {
        background: #075dbf;
        border-top: 0px;
        color: #fff;
        height: 65px;
    }

    .table-scroll {
        border: 1px solid gray;
        width: 100%;
    }

        .table-scroll tbody {
            display: block;
            position: relative;
            width: 100%;
            overflow-y: scroll;
            border-top: 1px solid rgba(0, 0, 0, 0.2);
        }

        .table-scroll tr {
            width: 100%;
            display: flex;
        }

        .table-scroll td,
        .table-scroll th {
            /* flex-basis: 100%;
    flex-shrink: 2; */
            display: block;
            padding: 0.3rem;
            text-align: center;
            width: 100%;
            white-space: wrap;
        }


    .table thead th {
        border-bottom: 0px;
        border-top: 0px;
    }

    .table-body {
        height: 250px;
    }

        .table-body::-webkit-scrollbar {
            width: 6px;
        }

        .table-body::-webkit-scrollbar-thumb {
            background: #bababa;
            border-radius: 15px !important;
        }

            .table-body::-webkit-scrollbar-thumb:hover {
                background: #b9b5b5;
            }

    .blue_text {
        color: #075dbf;
    }

    .table td,
    .table th {
        font-size: 12px;
    }

    .table td {
        font-size: 12px;
        border-top: 1px solid #7c7a7a !important;
    }

    .table td,
    .table th {
        vertical-align: middle !important;
    }

    .card_shadow {
        box-shadow: 0px 0px 6px 0px #767676f7;
    }

    .border {
        border: 1px solid #7c7a7a !important;
    }

    .filter-down {
        margin-left: 7px;
    }

    .table-col-title {
        height: 100%;
        display: flex;
        justify-content: center;
        align-items: center;
    }



    .select2-container--default .select2-selection--multiple .select2-selection__rendered li {
        list-style: none;
        font-size: 12px;
    }


    .select2-container {
        padding-right: 10px;
    }


    .select2-container--default .select2-selection--multiple {
        line-height: normal;
        border: 1px solid #e9ecef !important;
        min-height: 29px;
        border-radius: 0px;
    }
</style>


<script type="text/javascript">
    $(document).ready(function () {
        toastr.options.timeOut = 1500; // 1.5s
        toastr.success('Welcome!');

    });
</script>
