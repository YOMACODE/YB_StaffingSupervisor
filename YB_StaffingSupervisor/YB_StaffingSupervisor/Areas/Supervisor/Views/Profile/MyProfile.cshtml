@model YB_StaffingSupervisor.DataAccess.Entities.UserProfileModel
@{
    ViewData["Title"] = "My Profile";
    Layout = "~/Views/Shared/_ProantoV2MasterLayout.cshtml";
}

<style type="text/css">
    .left-sidebar {
        box-shadow: 3px 0px 5px #4783c71b;
    }

    .profile-pic-detail {
        max-width: 200px;
        max-height: 200px;
        display: block;
    }

    .basic-info hr {
        background-color: rgb(255 176 116);
        width: 80px;
        height: 2px;
        border-radius: 5px;
        border: 0;
    }

    .security-section hr {
        background-color: rgb(255 176 116);
        width: 45px;
        height: 2px;
        border-radius: 5px;
        border: 0;
    }

    .profile-name {
        font-weight: 500;
        font-size: 16px;
    }

    .file-upload {
        display: none;
    }

    .circle {
        border-radius: 50%;
        overflow: hidden;
        width: 125px;
        height: 125px;
        border: 5px solid #2a69b282;
        position: relative;
        bottom: 65px;
        margin: auto;
    }

    .profile-pic-card {
        border: 0;
        box-shadow: 0px 3px 7px #3e89de54;
        border-radius: 8px !important;
        border: 1px solid #2a69b24b;
        overflow: hidden;
    }

        .profile-pic-card .card-header {
            height: 125px;
            background-size: cover;
            background-position: center;
            background-image: url(../../images/profile-bg.jpg);
            cursor: default;
            opacity: .4;
        }

    .profile-detail-card {
        border: 0;
        box-shadow: 0px 2px 7px #3a7fce34;
        border-radius: 8px !important;
        border: 1px solid #2a69b24b;
        overflow: hidden;
    }

    .user-details {
        position: relative;
        bottom: 30px;
    }

    .p-image {
        color: #ffffff;
        transition: all .3s cubic-bezier(.175, .885, .32, 1.275);
        cursor: pointer;
        background: #2a69b2;
        padding: 12px 12px 11px 12px;
        font-size: 11px;
        outline: 3px solid #195fae4f;
        line-height: normal;
        border-radius: 41px;
        width: fit-content;
    }

    .avatar-pic {
        outline: 3px solid #195eae30;
        border-radius: 100px;
        opacity: .9;
        cursor: pointer;
    }

        .avatar-pic:hover {
            opacity: 1;
            filter: brightness(90%);
        }

        .avatar-pic:active {
            outline: 0;
        }

    .p-image:hover {
        transition: all .3s cubic-bezier(.175, .885, .32, 1.275);
    }

    .upload-button {
        font-size: 1.2em;
    }

        .upload-button:hover {
            transition: all .3s cubic-bezier(.175, .885, .32, 1.275);
            color: #f9f9f9;
        }

    .inputs input {
        width: 40px;
        height: 40px
    }


    input[type=number]::-webkit-inner-spin-button,
    input[type=number]::-webkit-outer-spin-button {
        -webkit-appearance: none;
        -moz-appearance: none;
        appearance: none;
        margin: 0
    }

    .card-2 {
        background-color: #fff;
        padding: 10px;
        width: 350px;
        height: 100px;
        bottom: -50px;
        left: 20px;
        position: absolute;
        border-radius: 5px
    }

        .card-2 .content {
            margin-top: 50px
        }

            .card-2 .content a {
                color: red
            }

    .form-control:focus {
        box-shadow: none;
        border: 1px solid #2a69b26e;
    }

    .change-pass-card {
        /* box-shadow: 0px 2px 6px #448bdb44; */
        border-radius: 3px;
        border: 1px solid rgb(228, 228, 228);
        margin-top: 8px;
    }

        .change-pass-card .card-body {
            padding-top: 5px !important;
            padding-bottom: 5px !important;
        }
</style>

<div class="page-breadcrumb">
    <div class="row my-2">
        <div class="col-5 col-md-5 align-self-center">
            <h3 class="page-title text-truncate text-dark font-weight-medium mb-1">@Model.FullName</h3>
            <div class="d-flex align-items-center">
                <nav aria-label="breadcrumb">
