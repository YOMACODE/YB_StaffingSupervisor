                                    <span>
                                        00:30
                                    </span>
                                </p>
                                <button class="btn btn-primary px-4 bg-theme validate-btn">Validate</button>
                            </div>
                        </div>

                        <div class="mt-3 password-body-footer" style="display: none;">
                            <div class="d-flex justify-content-center align-items-center">
                                <button class="btn btn-primary">Update Password</button>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script>
        $(document).ready(function () {

            toastr.success('My Profile');

            var readURL = function (input) {
                if (input.files && input.files[0]) {
                    var reader = new FileReader();

                    reader.onload = function (e) {
                        $('.profile-pic-detail').attr('src', e.target.result);
                        $('.profile-pic-detail').css({ 'width': '100%', "height": '100%' });
                    }

                    reader.readAsDataURL(input.files[0]);
                }
            }


            $(".file-upload").on('change', function () {
                readURL(this);
            });

            $(".upload-button").on('click', function () {
                $(".file-upload").click();
            });

            $('#validateButton').click(function () {
                $('.otp-method, #validateButton').hide();
                $('.otp-count').css("visibility", "hidden");
                $('.changePassword, #savePasswordButton').fadeIn();
            });
            $('.validate-btn').click(function () {
                $('.otp-body').hide();
                $('.password-body').show();
                $('.otp-body-footer').hide();
                $('.password-body-footer').show();
            });
            $('.enable-pwd').click(function () {
                $(".pwd-box").prop('disabled', false);
                $(".chng-pwd-btn").html("Update Password")
            });
        });
        $(document).addEventListener("DOMContentLoaded", function (event) {
            function OTPInput() {
                const inputs = document.querySelectorAll('#otp > *[id]');
                for (let i = 0; i < inputs.length; i++) { inputs[i].addEventListener('keydown', function (event) { if (event.key === "Backspace") { inputs[i].value = ''; if (i !== 0) inputs[i - 1].focus(); } else { if (i === inputs.length - 1 && inputs[i].value !== '') { return true; } else if (event.keyCode > 47 && event.keyCode < 58) { inputs[i].value = event.key; if (i !== inputs.length - 1) inputs[i + 1].focus(); event.preventDefault(); } else if (event.keyCode > 64 && event.keyCode < 91) { inputs[i].value = String.fromCharCode(event.keyCode); if (i !== inputs.length - 1) inputs[i + 1].focus(); event.preventDefault(); } } }); }
            } 
            OTPInput();
        });
        
    </script>
    <script src="~/js/Areas/Profile/MyProfile.js" asp-append-version="true"></script>
}