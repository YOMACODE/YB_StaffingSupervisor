@{
    var type = (string)TempData["_alert.type"];
    var title = (string)TempData["_alert.title"];
    var body = (string)TempData["_alert.body"];
}


@if (type == "success")
{
    <script>
        toastr.options.positionClass = 'toast-bottom-right';
        toastr.success("@title @body.ToString()");
    </script>
}
@if (type == "danger")
{
    <script>
        toastr.options.positionClass = 'toast-bottom-right';
        toastr.error("@title @body.ToString()");
    </script>
}
@if (type == "warning")
{
    <script>
        toastr.options.positionClass = 'toast-bottom-right';
        toastr.warning("@title @body.ToString()");
    </script>
}

@if (type == "info")
{
    <script>
        toastr.options.positionClass = 'toast-bottom-right';
        toastr.info("@title @body.ToString()");
    </script>
}
